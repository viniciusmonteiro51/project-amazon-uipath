<mjml>
  <mj-head>
    <mj-preview>Oferta Especial na Amazon - {{nome_jogo}}</mj-preview>

    <!-- Estilos personalizados -->
    <mj-style inline="inline">
      .amazon-btn {
        background-color: #ff9900;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
      }
      .title-dark {
        font-size: 24px;
        font-weight: bold;
        color: #232f3e; /* Cor escura da Amazon */
        text-align: center;
        padding: 10px 0;
      }
    </mj-style>

    <mj-attributes>
      <mj-button mj-class="amazon-btn" font-size="16px" align="center"/>
      <mj-text mj-class="title-dark"/>
    </mj-attributes>
  </mj-head>

  <mj-body background-color="#f3f3f3">
    <!-- Cabeçalho -->
    <mj-section background-color="#232f3e" padding="20px">
      <mj-column>
        <mj-text align="center" font-size="22px" color="#ffffff" font-weight="bold">
          🎮 Oferta Especial da Amazon! 🎮
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Corpo do e-mail -->
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <!-- Título escuro -->
        <mj-text mj-class="title-dark">{{nome_jogo}}</mj-text>
        <mj-text font-size="18px" font-weight="bold" color="#ff9900">💲 {{preco}}</mj-text>

        <mj-text>📦 <strong>Enviado por:</strong> {{enviado_por}}</mj-text>
        <mj-text>🏷️ <strong>Vendido por:</strong> {{vendido_por}}</mj-text>
        <mj-text>🏭 <strong>Marca:</strong> {{marca}}</mj-text>
        <mj-text>🎭 <strong>Tema:</strong> {{tema}}</mj-text>
        <mj-text>🎮 <strong>Gênero:</strong> {{genero}}</mj-text>
        <mj-text>👥 <strong>Número de Jogadores:</strong> {{numero_jogadores}}</mj-text>
        <mj-text>🛠️ <strong>Material:</strong> {{material}}</mj-text>

        <mj-divider border-color="#ff9900" />

        <mj-text font-size="16px" color="#555">📖 <strong>Descrição:</strong> {{descricao}}</mj-text>

        <!-- Botão Estilizado -->
        <mj-button href="https://www.amazon.com" mj-class="amazon-btn">
          🛒 Comprar Agora
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- Rodapé -->
    <mj-section background-color="#232f3e" padding="20px">
      <mj-column>
        <mj-text align="center" font-size="14px" color="#ffffff">
          © 2025 Amazon. Todos os direitos reservados.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
